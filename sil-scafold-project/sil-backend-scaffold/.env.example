# Rename to .env and fill values
SECRET_KEY=replace-me-with-secure-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis Configuration for Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OIDC Authentication
# For local development with Keycloak, run scripts/setup_keycloak.sh first
OIDC_ENABLED=True
OIDC_ISSUER=http://localhost:8080/realms/sil
OIDC_AUDIENCE=sil-api
OIDC_JWKS_URL=http://localhost:8080/realms/sil/protocol/openid-connect/certs

# Africa's Talking SMS Configuration
# Default uses sandbox mode - for production set AFRICASTALKING_SANDBOX=False
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_SANDBOX=True
AFRICASTALKING_SENDER_ID=SIL
STORE_PHONE_NUMBER=+254700000000

# Email Configuration
# For local development with Mailhog (http://localhost:8025 to view emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=notifications@example.com
ADMIN_EMAIL=admin@example.com

# Application Settings
ORDER_NOTIFICATION_RETRY_COUNT=3
ORDER_NOTIFICATION_RETRY_DELAY=300  # seconds
